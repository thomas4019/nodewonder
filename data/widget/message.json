{
    "settingsModel": [
        {
            "name": "message",
            "type": "Text"
        },
        {
            "name": "type",
            "type": "Text",
            "widget": "select",
            "settings": {
                "label": "Message Type",
                "choices": [
                    "info",
                    "success",
                    "warning",
                    "error"
                ]
            }
        }
    ],
    "deps": {
        "jquery": [],
        "toastr": [],
        "handlebars": []
    },
    "action": {
        "_is_func": true,
        "args": [
            "settings",
            "id",
            "scope",
            "handlers"
        ],
        "javascript": "toastr[settings.type](settings.message);"
    },
    "name": "message",
    "tags": [
        "action",
        "local-action"
    ],
    "makeActionJS": {
        "_is_func": true,
        "args": [],
        "javascript": "return 'nw.functions.processActionResult(\"' + this.id + '\", new ' + this.action + '(nw.functions.fillSettings(' + JSON.stringify(this.settings) + ', scope, []), ' +\n    '\"' + this.id + '\", scope,' + cms.functions.createHandlersCode(this) + '));';"
    },
    "settings_unfiltered": []
}