{
    "name": "textbox",
    "settingsModel": [
        {
            "name": "inline",
            "type": "Boolean",
            "quantity": "",
            "widget": "checkbox",
            "settings": {},
            "required": false
        },
        {
            "name": "data",
            "type": "Text",
            "quantity": "",
            "widget": "ckeditor",
            "settings": {},
            "required": false
        }
    ],
    "settings_unfiltered": [
