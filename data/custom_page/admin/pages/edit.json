{
    "slotAssignments": {
        "body": [
            "main"
        ]
    },
    "controller": "widgets.editor.page = widgets.storage.file = args.page; widgets.preview.url = '/' + args.page; loadPage(args.page, function(err, page) { scope.parent = page.parent; scope.controller = page.controller; callback(); }); ",
    "parent": "admin",
    "widgets": {
        "main": {
            "type": "two_col",
            "slots": {
                "left": [
                    "parent",
                    "controller",
                    "storage"
                ],
                "right": [
                    "preview"
                ]
            },
            "has_form": true
        },
        "preview": {
            "type": "iframe",
            "url": "/",
            "has_form": true
        },
        "parent": {
            "label": "Parent",
            "type": "field_text",
            "name": "parent",
            "has_form": true
        },
        "controller": {
            "label": "Controller",
            "type": "textarea",
            "name": "parent",
            "has_form": true
        },
        "storage": {
            "type": "statejson",
            "file": "test2",
            "dir": "pages",
            "slots": {
                "form": [
                    "editor",
                    "save",
                    "wl"
                ]
            },
            "has_form": null
        },
        "save": {
            "type": "submit",
            "label": "Save",
            "has_form": true
        },
        "editor": {
            "type": "state_editor",
            "page": "test2",
            "has_form": false
        },
        "wl": {
            "type": "widget_selector",
            "has_form": false
        }
    }
}